<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/countdown">
    <TextView
        android:text="@string/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:textSize="60sp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorText"
        android:layout_marginBottom="10dp"
        android:id="@+id/textViewDays"/>
    <TextView
        android:text="@string/startText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/colorText"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:id="@+id/textViewEvent" />
    <RadioGroup
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:paddingLeft="40dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/christmas"
            android:textColor="@color/colorText"
            android:buttonTint="@color/colorText"
            android:padding="10dp"
            android:id="@+id/radioButtonChristmas" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/halloween"
            android:textColor="@color/colorText"
            android:buttonTint="@color/colorText"
            android:padding="10dp"
            android:id="@+id/radioButtonHalloween" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/summer"
            android:textColor="@color/colorText"
            android:buttonTint="@color/colorText"
            android:padding="10dp"
            android:id="@+id/radioButtonSummer" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other"
            android:textColor="@color/colorText"
            android:buttonTint="@color/colorText"
            android:padding="10dp"
            android:id="@+id/radioButtonOther" />
    </RadioGroup>
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="Insert date"
        android:gravity="center_horizontal"
        app:helperText="Insert date"
        android:textColor="@color/colorText"
        android:id="@+id/textInputCustomDate"/>
   
    <Button
        android:text="@string/countCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/colorText"
        android:backgroundTint="@color/button"
        android:id="@+id/buttonCountCustom" />
   
</LinearLayout>